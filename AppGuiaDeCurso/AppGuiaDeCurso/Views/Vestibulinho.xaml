<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGuiaDeCurso.Views.Vestibulinho"
             BackgroundColor="#121212"
             Title="Vestibulinho">
    <ContentPage.Content>
        <StackLayout Spacing="10"
                     Margin="10"
                     Padding="10">

            <Label Text="VESTIBULINHO ETEC" FontSize="22" TextColor="#AB0209" FontAttributes="Bold" Margin="0,15,0,0" HorizontalTextAlignment="Center" />


            <Label Text="FIQUE ATENTO AS DATAS, ACESSO AO SITE ABAIXO" FontSize="22" TextColor="White" FontAttributes="Bold" Margin="0,10,0,0" HorizontalTextAlignment="Center" />


            <Button x:Name="Btnsite" Text="Inscreva-se pelo site: www.vestibulinhoetec.com.br" Clicked="Btnsite_Clicked"  BackgroundColor="#AB0209" TextColor="Black" FontAttributes="Bold" FontSize="18" Margin="0,5,0,0" CornerRadius="8" />

            <Button x:Name="BtnContato" Text="CONTATO" Clicked="BtnContato_Clicked"  BackgroundColor="#AB0209" TextColor="Black" FontAttributes="Bold" Margin="5" FontSize="18" CornerRadius="8" VerticalOptions="EndAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>